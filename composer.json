{
    "name": "monolog-http/monolog-http",
    "type": "monolog-handler",
    "description": "A collection of monolog handlers using PSR-18 http client",
    "keywords": ["handler", "http", "http-clients", "monolog", "monolog-http", "psr3", "psr17", "psr18", "gitlab", "slack", "telegram", "gitter", "sendgrid", "cube", "ifttt", "madrill"],
    "homepage": "https://github.com/monolog-http/monolog-http",
    "license": "MIT",
    "authors": [
        {
            "name": "George Mponos",
            "email": "gmponos@gmail.com",
            "homepage": "https://github.com/gmponos"
        },
        {
            "name": "Savvas Alexandrou",
            "email": "savvas@alexandrou.eu",
            "homepage": "https://savvas.alexandrou.eu"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "ext-json": "*",
        "monolog/monolog": "^2.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0.1",
        "psr/http-message": "^1.0.1"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.7",
        "nyholm/psr7": "^1.3",
        "phpstan/phpstan": "~0.12.31",
        "phpstan/phpstan-phpunit": "~0.12.11",
        "phpunit/phpunit": "~8.5.8 || ~9.2.2",
        "squizlabs/php_codesniffer": "~3.5.5",
        "swiftmailer/swiftmailer": "^6.2"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "MonologHttp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonologHttp\\Tests\\": "tests"
        }
    }
}
