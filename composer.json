{
    "name": "monolog-http/monolog-http",
    "type": "library",
    "description": "A collection of monolog handlers using PSR-18 http client",
    "keywords": [
        "monolog",
        "http",
        "http-clients",
        "psr3",
        "psr17",
        "psr18",
        "monolog-http"
    ],
    "homepage": "https://github.com/monolog-http/monolog-http",
    "license": "MIT",
    "authors": [
        {
            "name": "George Mponos",
            "email": "gmponos@gmail.com",
            "homepage": "https://github.com/gmponos",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "monolog/monolog": "^2.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0.1",
        "psr/http-message": "^1.0.1"
    },
    "require-dev": {
        "phpstan/phpstan": "~0.12.29",
        "phpstan/phpstan-phpunit": "~0.12.11",
        "phpunit/phpunit": "~8.5.5 || ~9.2.2",
        "squizlabs/php_codesniffer": "~3.5.5"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "MonologHttp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonologHttp\\Tests\\": "tests"
        }
    }
}
